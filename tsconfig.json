{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "nodenext",
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"types": [
		"chrome",
		"document",
	]
}